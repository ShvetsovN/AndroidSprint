<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/cardview_item_ingredient_horizontal_indent"
    android:layout_marginVertical="@dimen/half_main_indent_and_corner_radius"
    android:backgroundTint="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvIngredientDescription"
        style="@style/IngredientTextStyle"
        android:layout_width="@dimen/cardview_item_tv_ingredient_name_width"
        android:layout_height="wrap_content"
        tools:text="Творог" />

    <TextView
        android:id="@+id/tvIngredientQuantity"
        style="@style/IngredientTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        tools:text="350" />
</LinearLayout>