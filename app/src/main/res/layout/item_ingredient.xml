<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/cardview_item_ingredient_horizontal_indent"
        android:layout_marginVertical="@dimen/half_main_indent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIngredientDescription"
            style="@style/IngredientTextStyle"
            android:layout_width="@dimen/cardview_item_tv_ingredient_name_width"
            android:layout_height="wrap_content"
            tools:text="Творог" />

        <TextView
            android:id="@+id/tvIngredientQuantity"
            style="@style/IngredientTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="350" />

        <TextView
            android:id="@+id/tvIngredientUnitOfMeasure"
            style="@style/IngredientTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:textAlignment="textEnd"
            tools:text="г" />

    </LinearLayout>
</LinearLayout>