<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Text Style  -->
    <style name="StyleTitle14ItemHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_cardview_style_nav_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/cardview_text_header_color</item>
    </style>

    <style name="StyleTitle14BottomButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_cardview_style_nav_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/cardview_item_description_text_size</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/cardview_description_or_recipe_ingredient_text_color
        </item>
        <item name="android:gravity">left</item>
    </style>

    <!--    Button Style    -->
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14BottomButton</item>
        <item name="cornerRadius">@dimen/half_main_indent_and_corner_radius_seekbar_thumb_width
        </item>
        <item name="android:paddingVertical">@dimen/padding_vertical_horizontal</item>
    </style>

    <!--    Text Header Style   -->
    <style name="HeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textColor">@color/cardview_text_header_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/shape_rounded_variants</item>
        <item name="android:layout_marginHorizontal">@dimen/main_indent_seekbar_height</item>
        <item name="android:layout_marginVertical">@dimen/main_indent_seekbar_height</item>
    </style>

    <!--    Text Ingredient Style   -->
    <style name="IngredientHeaderTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:textColor">@color/recipe_fragment_ingredients_header_text_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginBottom">@dimen/recipe_portion_ingredient_text_indent</item>
    </style>

    <!--    Text Portion Style   -->
    <style name="PortionTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_ingredients_size</item>
        <item name="android:textColor">@color/recipe_fragment_portion_text_color</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_marginEnd">@dimen/recipe_portion_ingredient_text_indent</item>
        <item name="android:layout_marginBottom">@dimen/recipe_portion_ingredient_text_indent</item>
    </style>

    <!--    Text Ingredient Style   -->
    <style name="IngredientTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_cardview_style_nav_text_size</item>
        <item name="android:textColor">@color/cardview_description_or_recipe_ingredient_text_color
        </item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--   Item Method Text Style -->
    <style name="MethodTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginHorizontal">
            @dimen/cardview_item_ingredient_divider_horizontal_indent
        </item>
        <item name="android:layout_marginVertical">
            @dimen/half_main_indent_and_corner_radius_seekbar_thumb_width
        </item>
        <item name="android:textColor">@color/cardview_description_or_recipe_ingredient_text_color
        </item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_ingredients_size</item>
    </style>

    <style name="SeekBarStyle">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
        <item name="android:paddingStart">@dimen/seekbar_progress_corner_radius_padding</item>
        <item name="android:paddingEnd">@dimen/seekbar_progress_corner_radius_padding</item>
    </style>

    <style name="RecycleViewStyle">
        <item name="android:background">@drawable/shape_recycle_view_variants</item>
        <item name="android:layout_marginHorizontal">@dimen/main_indent_seekbar_height</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ImageButtonFavoritesStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_marginTop">@dimen/main_indent_seekbar_height</item>
        <item name="android:layout_marginEnd">@dimen/main_indent_seekbar_height</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
</resources>