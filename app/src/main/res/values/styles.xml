<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Text Style  -->
    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/button_style_nav_text_size</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    Button Style    -->
    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_horizontal</item>
    </style>

    <!--    Text Header Style   -->
    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_header_color</item>
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/shape_rounded_variants</item>
        <item name="android:layout_marginHorizontal">@dimen/main_indent</item>
        <item name="android:layout_marginVertical">@dimen/main_indent</item>
    </style>
</resources>